<%= form_for(@user ,:url =>"/update_user/#{@user.id}",:method=>:post) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <%= f.radio_button :role, 'admin' %>Admin
  <%= f.radio_button :role, 'user' %>User
  <%= f.radio_button :role, 'guest' %>Guest
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


